    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start script",
            "type": "python",
            "request": "launch",
            "module": "wad2023_program",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Start script (export to CSV)",
            "type": "python",
            "request": "launch",
            "module": "wad2023_program",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--output=csv"
            ],
            "cwd": "${workspaceFolder}/src"
        },
        {
            "name": "Start script (find)",
            "type": "python",
            "request": "launch",
            "module": "wad2023_program",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--find=python"
            ],
            "cwd": "${workspaceFolder}/src"
        },
    ]
}